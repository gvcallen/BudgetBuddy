<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".StatFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtViewMoneySaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:singleLine="false"
        android:text="@string/moneySaved"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewTimePeriod" />

    <TextView
        android:id="@+id/txtViewMoneySpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:singleLine="false"
        android:text="@string/moneySpent"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtViewMostTransactions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMoneySaved" />

    <TextView
        android:id="@+id/txtViewMostTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:singleLine="false"
        android:text="@string/mostTransactions"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtViewExpensiveTransaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMoneySpent" />

    <TextView
        android:id="@+id/txtViewExpensiveTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:singleLine="false"
        android:text="@string/expensiveTransaction"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewMostTransactions" />

    <EditText
        android:id="@+id/edtTxtTimePeriod"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/txtViewTimePeriod"
        app:layout_constraintStart_toEndOf="@+id/txtViewTimePeriod"
        app:layout_constraintTop_toTopOf="@+id/txtViewTimePeriod" />

    <TextView
        android:id="@+id/txtViewTimePeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Time period in days"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>